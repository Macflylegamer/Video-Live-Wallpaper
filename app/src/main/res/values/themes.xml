<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.VideoLiveWallpaper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ios_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/ios_background</item>
        <item name="android:statusBarColor">@color/ios_blue_dark</item>
        <item name="android:navigationBarColor">@color/ios_blue_dark</item>
        <item name="android:colorBackground">@color/ios_background</item>
        <item name="android:colorForeground">@color/black</item>
        <!-- Window decorations -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Widget styles -->
        <item name="android:buttonStyle">@style/Widget.Material3.Button</item>
        <item name="android:editTextStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="android:dialogTheme">@style/ThemeOverlay.Material3.Dialog</item>
    </style>
</resources>
